<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.suntak.eightdisciplines.dao.CustomerComplaintDao">
    <select id="getComplaintsByCar" resultType="com.suntak.eightdisciplines.entity.CustomerComplaint">
		SELECT base_uid,customcode,salesarea,revokeresult,customprocess
		defedtdesc,leasts
		FROM spfs30_8d_sell
		WHERE leasts = #{leasts}
	</select>

    <update id="updateComplaint" parameterType="com.suntak.eightdisciplines.entity.CustomerComplaint">
        update spfs30_8d_sell
        <set>
            <if test="DEFEDTDESC != null">DEFEDTDESC=#{DEFEDTDESC},</if>
            <if test="CLAIMTYPES != null">CLAIMTYPES=#{CLAIMTYPES},</if>
        </set>
        where  leasts = #{leasts}
    </update>
    <delete id="deleteComplaint">
		DELETE FROM
		spfs30_8d_sell
		WHERE
		leasts = #{leasts}
	</delete>
</mapper>
